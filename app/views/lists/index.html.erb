<div class="jumbotron">
  <h1 class="display-4">Welcome to Code Log</h1>
  <p class="lead">Log your goals, notes and achievements while learning to code.</p>
  <hr class="my-4">
  <%= render 'form_index', list: @list %>
</div>

<table class="table table-bordered table-striped table-hover">
  <tbody>
    <% @lists.each do |list| %>
      <% if list.completed %>

        <tr class="table">
          <td class="strikethrough"><%= link_to list.description, edit_list_path(list) %><% list.description %></td>
          <td>
            <div class="progress">
              <div class="progress-bar bg-success" role="progressbar" style="width: 100%;" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100">100%</div>
            </div>
          </td>
          <td><%= link_to 'Delete', list, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-outline-danger btn-block' %></td>

        </tr>

      <% else %>
       <tr>
          <td><%= link_to list.description, edit_list_path(list) %><% list.description %></td>
          <td><% link_to 'Show', list, class: 'btn btn-outline-success' %></td>
          <td><%= link_to 'Delete', list, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-outline-danger btn-block' %></td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Create New Project', new_list_path, class: 'btn btn-success' %>
