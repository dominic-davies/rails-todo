



  <h1>Code Log</h1>
<div class="card w-75" style="width: 18rem;">
  <div class="card-body">
    <%= render 'form_index', list: @list %>
  </div>
</div>

<table class="table table-bordered table-striped table-hover">
  <tbody>
    <% @lists.each do |list| %>
      <% if list.completed %>

        <tr class="table strikethrough">
          <td><%= link_to list.description, edit_list_path(list) %><% list.description %></td>
          <td>
            <div class="progress">
              <div class="progress-bar bg-success" role="progressbar" style="width: 100%;" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100">100%</div>
            </div>
          </td>
          <%# <td>link_to 'Edit', edit_list_path(list), class: 'btn btn-outline-success'</td> %>
          <td><%= link_to 'Delete', list, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-outline-danger btn-block' %></td>

        </tr>

      <% else %>
       <tr>
          <td><%= link_to list.description, edit_list_path(list) %><% list.description %></td>
          <td><% link_to 'Show', list, class: 'btn btn-outline-success' %></td>
          <%# <td>link_to 'Edit', edit_list_path(list), class: 'btn btn-outline-success'</td> %>
          <td><%= link_to 'Delete', list, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-outline-danger btn-block' %></td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>

<br>

